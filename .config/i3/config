# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
    bindsym $mod+Shift+r        restart
# exit i3 (logs you out of your X session)
    bindsym $mod+Shift+e        exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Workspace back and forth
    bindsym $mod+a               workspace back_and_forth

# Spawning Terminal    
    bindsym $mod+apostrophe     split horizontal ;; exec $term
    bindsym $mod+slash          split vertical ;; exec $term

# kill focused window
    bindsym $mod+q              kill

    bindsym $mod+h              focus left
    bindsym $mod+j              focus down
    bindsym $mod+k              focus up
    bindsym $mod+l              focus right

    bindsym $mod+Shift+h        move left
    bindsym $mod+Shift+j        move down
    bindsym $mod+Shift+k        move up
    bindsym $mod+Shift+l        move right

    bindsym $mod+space           focus mode_toggle
    bindsym $mod+Shift+space     floating toggle

# Scratchpad 
    bindsym $mod+w move         scratchpad
    bindsym $mod+semicolon      scratchpad show; border pixel 2

# Dynamic resize
    bindsym $mod+Shift+y	resize shrink width 20 px or 20 ppt
    bindsym $mod+Shift+u	resize shrink height 20 px or 20 ppt
    bindsym $mod+Shift+i	resize grow height 20 px or 20 ppt
    bindsym $mod+Shift+o	resize grow width 20 px or 20 ppt
# Gaps
    bindsym $mod+Shift+d 	gaps inner current set 8; gaps outer current set 14
    bindsym $mod+z              gaps outer current plus 2
    bindsym $mod+Shift+z        gaps outer current minus 2
    bindsym $mod+f              fullscreen toggle

# Bindings to execute    
    bindsym $mod+x                      exec --no-startup-id ~/.config/i3/lock.sh
    bindsym $mod+Shift+p                exec psensor
    bindsym $mod+Shift+m                exec transset -a --dec .05
    bindsym $mod+Shift+n                exec transset -a --inc .05
    bindsym $mod+g                      exec dmenu_run
    bindsym $mod+Shift+g                exec qutebrowser 
    bindsym $mod+Return                 exec $term 
    bindsym $mod+Home                   exec nautilus --no-desktop

# Music Bindings
# For advancing forward/backward in an mpd song
    bindsym $mod+bracketleft                exec $lilbak
    bindsym $mod+Shift+bracketleft          exec $bigbak
    bindsym $mod+bracketright               exec $lilfor
    bindsym $mod+Shift+bracketright         exec $bigfor

    bindsym $mod+greater                exec $next
    bindsym $mod+less                   exec $prev
    bindsym $mod+Shift+less             exec $beg
    bindsym $mod+p                      exec $pause && mpc volume 50

    bindsym $mod+Up                     exec $inc
    bindsym $mod+Down                   exec $dec
    bindsym XF86AudioRaiseVolume        exec $inc
    bindsym XF86AudioLowerVolume        exec $dec


